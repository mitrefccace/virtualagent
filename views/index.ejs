        var ws = "wss://njsip.task3acrdemo.com/ws";
        var sipUri = "sip:80001@njsip.task3acrdemo.com";
        var pw = "1qaz1qaz";
        var stun =  "stun:newstun.task3acrdemo.com:3478";
        
        //store in hidden fieldset
				$('#ws_servers').attr("name", ws);					 
				$('#my_sip_uri').attr("name",sipUri);
